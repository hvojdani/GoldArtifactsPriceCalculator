<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".ui.gallery.GalleryFragment">


    <TextView
        android:id="@+id/textValueAddedTax"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="start"
        android:paddingLeft="@dimen/padding_10dp"
        android:paddingTop="12dp"
        android:paddingRight="@dimen/padding_10dp"
        android:text="@string/value_added_tax"
        android:textAlignment="textStart"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/editValueAddedTax"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.30" />

    <EditText
        android:id="@+id/editValueAddedTax"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textDirection="ltr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textValueAddedTax"
        app:layout_constraintTop_toTopOf="@id/textValueAddedTax"
        app:layout_constraintWidth_percent="0.65"
        tools:text="@string/value_added_tax" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:text="@string/save_settings"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editValueAddedTax"
        app:layout_constraintWidth_percent="0.60" />

</androidx.constraintlayout.widget.ConstraintLayout>